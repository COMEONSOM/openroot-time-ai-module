{
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",                     // Required when using paths
    "paths": {
      "@/*": ["src/*"]
    },
    "ignoreDeprecations": "6.0"         // Silences baseUrl deprecation warning
  },
  "include": ["src"]
}
